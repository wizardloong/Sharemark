{
  "manifest_version": 3,
  "name": "Shared Bookmarks",
  "version": "1.0",
  "description": "Расширение для совместного использования папок закладок",
  "permissions": [
    "bookmarks",
    "scripting",
    "activeTab",
    "storage",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": ["*://localhost/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [{
    "resources": [""],
    "matches": ["<all_urls>"]
  }]
}
